@using RecipeWebsite.ViewModels.CategoryViewModel

@model CategoryViewModel

<!-- Page Content -->
<main>

    <div class="container col-xxl-8 px-4 py-5 border-bottom mb-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <h1 class="display-6 fw-bold text-body-emphasis lh-1 mb-4"> Collection Categories </h1>
            <p class="lead fst-italic"> All collection categories are displayed here </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a asp-controller="Tags" asp-action="Create" type="button" class="btn btn-success btn-lg px-4 me-md-2"><i class='bx bxs-edit-alt'></i> Create Collection Category </a>
            </div>
        </div>
    </div>

    <!-- Tags -->
    <h4 class="fw-normal mb-3">
        <a class="link-dark" href="#recipe-ingredients" id="recipe-ingredients"> Tags </a>
    </h4>
    <div class="pb-3 mb-4 border-bottom">
        <table class="table caption-top">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Tags Name</th>
                    <th scope="col">Number of recipes</th>
                    <th scope="col"> </th>
                    <th scope="col"> </th>
                </tr>
            </thead>
            @if (Model.RecipeTags.Count != 0)
            {
                <caption>Number of categories:<strong>  @Model.RecipeTags.Count </strong></caption>
                <tbody class="table-light">
                    @{
                        var i = 1;
                        foreach (var item in Model.RecipeTags)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.TagsName Recipe</td>
                                <td>  </td>
                                <td>
                                    <a class="btn btn-primary btn-sm px-4" asp-route-id="@item.Id" asp-controller="Tags" asp-action="Edit">Edit</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-sm px-4" asp-route-id="@item.Id" asp-controller="Tags" asp-action="Delete">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            }
            else
            {
                <caption>No collection categories found.</caption>
                <tbody class="table">
                    <tr>
                        <th scope="row">...</th>
                    </tr>
                </tbody>
            }
        </table>
    </div>

</main>