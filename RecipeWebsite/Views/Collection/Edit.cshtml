@using RecipeWebsite.ViewModels.CollectionViewModel

@model EditCollectionViewModel

<!-- Header -->
<div class="py-5 text-center">
    <h2>Collection Edit form</h2>
    <p class="lead">Need to Edit a Collection? Edit here!</p>
</div>

<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <div class="row g-5">

        <form class="needs-validation" novalidate="">
            <div class="p-4 p-md-5 border rounded-3 bg-body-tertiary">

                <h4 class="mb-4">Collection Details</h4>

                <!-- Title -->
                <div class="col-sm-12 mb-3">
                    <label asp-for="Title" class="form-label">Collection Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="title" placeholder="" required>
                    <div class="invalid-feedback">
                        Collection Title is required.
                    </div>
                </div>

                <!-- Description -->
                <div class="col-sm-12 mb-3">
                    <label asp-for="Description" class="form-label">Recipe Description</label>
                    <input asp-for="Description" type="text" class="form-control" id="description" placeholder="" required>
                    <div class="invalid-feedback">
                        Collection Description is required.
                    </div>
                </div>

                <!-- Image -->
                <div class="col-12 mb-5">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" type="file" class="form-control" id="image" placeholder="Thumbnail" required>
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Collection Thumbnail is required.
                    </div>
                </div>

                <!-- Edit -->
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="submit" class="btn btn-primary btn-lg px-4 gap-3">Post Recipe</button>
                    <button type="reset" class="btn btn-secondary btn-lg px-4">Reset Form</button>
                    <a class="btn btn-danger btn-lg px-4" asp-area="" asp-controller="Collection" asp-action="Index">Cancel</a>
                </div>

            </div>
        </form>

    </div>

</form>
