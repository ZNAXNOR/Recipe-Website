@using RecipeWebsite.ViewModels.CollectionViewModel;

@model CreateCollectionViewModel

<!-- Header -->
<div class="py-5 text-center">
    <h2>Collection Post form</h2>
    <p class="lead">Got a new collection? Create it here!</p>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
        
    <div class="row g-5">
        
        <form class="needs-validation" novalidate="">
            <div class="p-4 p-md-5 border rounded-3 bg-body-tertiary">

                <h4 class="mb-4">Collection Details</h4>

                <!-- Title -->
                <div class="col-sm-12 mb-3">
                    <label asp-for="Title" class="form-label">Collection Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="title" placeholder="" value="" required>
                    <div class="invalid-feedback">
                        Collection Title is required.
                    </div>
                </div>

                <!-- Description -->
                <div class="col-sm-12 mb-3">
                    <label asp-for="Description" class="form-label">Recipe Description</label>
                    <input asp-for="Description" type="text" class="form-control" id="description" placeholder="" value="" required>
                    <div class="invalid-feedback">
                        Collection Description is required.
                    </div>
                </div>
        
                <!-- Image -->
                <div class="col-12 mb-5">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" type="file" class="form-control" id="image" placeholder="Thumbnail" required>
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Collection Thumbnail is required.
                    </div>
                </div>

                <!-- Submit -->
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="submit" class="btn btn-primary btn-lg px-4 gap-3">Post Collection</button>
                    <button type="reset" class="btn btn-outline-secondary btn-lg px-4">Reset Form</button>
                </div>

                <hr class="my-4">

                <!-- T & C -->
                <small class="text-body-secondary form-text mb-5">® By clicking Post Collection, you agree to the terms of use.</small>

            </div>
        </form>

    </div>

</form>
